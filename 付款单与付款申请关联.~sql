
--付款单与付款申请关联

--先找一条关联对照数据
 select CONTRACTNO,
        TOP_BILLID,
        TOP_BILLTYPE,
        TOP_ITEMID
   from ap_payitem
  where billno = '80100FK19050035'
    and dr = 0 
    
--1	GCL\XXJC-CG(B)-2018-0078号	1001D110000000GHS5Z4	36D1	1001D110000000GHS5Z5


select CONTRACTNO,
       TOP_BILLID,
       TOP_BILLTYPE,
       TOP_ITEMID,
       --构成关联的字段
       dr
  from ap_payitem
 where billno = '80100FK19050034'
   and dr = 0
   for update
     ;
   
   
